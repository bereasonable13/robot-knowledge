{
  "version": "1.0.0",
  "integration_name": "chatgpt",
  "description": "ChatGPT integration via Custom Instructions API",
  "created": "2025-10-28",
  "enabled": false,
  "note": "Enable when implementing ChatGPT integration",
  
  "openai": {
    "api_key": "TO_BE_CONFIGURED",
    "model": "gpt-4",
    "max_tokens": 8000
  },
  
  "custom_instructions": {
    "method": "api",
    "endpoint": "https://api.openai.com/v1/user/custom_instructions",
    "update_frequency": "on_commit"
  },
  
  "sync_files": [
    "WORK.md",
    "KNOWLEDGE.md"
  ],
  
  "formatting": {
    "max_length": 1500,
    "sections": [
      "environment",
      "core_philosophy",
      "recent_learnings"
    ]
  },
  
  "instructions": [
    "1. Get OpenAI API key from platform.openai.com",
    "2. Update api_key in this file",
    "3. Test with: robot sync chatgpt",
    "4. Verify custom instructions updated in ChatGPT"
  ]
}
